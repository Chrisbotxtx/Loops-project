    var soft_drinks=["Coke","Pepsi","Sprite","Fanta","Mirinda","Mountain dew","dr.pepper"]
    var text='';
    for(i=0;i<soft_drinks.length;i++){
      text+=soft_drinks[i]+"<br>";
    }
    document.getElementById("Id1").innerHTML=text;
